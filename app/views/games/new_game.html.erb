<div class='container game-outer dev-game-outer'>
	<h1>Black Jack</h1>
	<div class='row outer_row'>
		<div class='col-md-12'>
			<div class= 'row player-rows dev-players'>
			</div>
			<div class='row buttons_row dev-buttons'>
				<div class='btn-group'>
					<div class='btn btn-primary dev-hit-button pull-left' data-method='hit'>Hit</div>
					<div class='btn btn-warning dev-stand-button pull-right' data-method='stand'>Stand</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
  $(function() {
    window.router = new BlackJack.Routers.GamesRouter({
    	game: <%= @game_json.to_json.html_safe -%>,
    	card_decks: <%= @card_decks.to_json.html_safe -%>
    });
    Backbone.history.start();
  });
</script>